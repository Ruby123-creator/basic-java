#include<iostream>
using namespace std;
int main(){
    int m,i,j,k;
    cout<<"enter the number rows and column";
    cin>>m;

    for(i=1;i<=m;i++){
        for(j=1;j<=m-i;j++){
         
            cout<<" "<<" ";   
        }
        k=i;
        for(;j<=m;j++){
            cout<<k--<<" ";
        }
        k=2;
        for(;j<=m+i-1;j++){
            cout<<k++<<" ";
            
        }
        
    
    cout<<endl;
    }
    return 0;
    }
